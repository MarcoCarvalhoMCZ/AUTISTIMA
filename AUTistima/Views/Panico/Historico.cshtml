@model List<AUTistima.Models.PanicAlert>
@using AUTistima.Models.Enums

@{
    ViewData["Title"] = "Hist√≥rico de Alertas de P√¢nico";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="bi bi-clock-history me-2"></i> Hist√≥rico de Alertas
                </h2>
                <a href="@Url.Action("Index", "Panico")" class="btn btn-danger rounded-pill">
                    <i class="bi bi-plus-circle me-2"></i> Novo Alerta
                </a>
            </div>

            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-info-circle-fill" style="font-size: 2rem;"></i>
                    <p class="mt-3 mb-0">Nenhum alerta registrado ainda.</p>
                </div>
            }
            else
            {
                <!-- Resumo Estat√≠stico -->
                <div class="row mb-4">
                    @{
                        var ativos = Model.Where(a => a.Status == StatusAlertaPanico.Ativo).Count();
                        var atendidos = Model.Where(a => a.Status == StatusAlertaPanico.Atendido).Count();
                        var resolvidos = Model.Where(a => a.Status == StatusAlertaPanico.Resolvido).Count();
                    }
                    <div class="col-md-3">
                        <div class="card border-danger text-center">
                            <div class="card-body">
                                <h5 class="card-title text-danger">üî¥ Ativos</h5>
                                <h2 class="text-danger">@ativos</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-warning text-center">
                            <div class="card-body">
                                <h5 class="card-title text-warning">üü° Atendidos</h5>
                                <h2 class="text-warning">@atendidos</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-success text-center">
                            <div class="card-body">
                                <h5 class="card-title text-success">‚úÖ Resolvidos</h5>
                                <h2 class="text-success">@resolvidos</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-primary text-center">
                            <div class="card-body">
                                <h5 class="card-title text-primary">üìä Total</h5>
                                <h2 class="text-primary">@Model.Count</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lista de Alertas -->
                <div class="timeline">
                    @foreach (var alerta in Model.OrderByDescending(a => a.DataCriacao))
                    {
                        var statusClass = alerta.Status switch
                        {
                            StatusAlertaPanico.Ativo => "danger",
                            StatusAlertaPanico.Atendido => "warning",
                            StatusAlertaPanico.Resolvido => "success",
                            StatusAlertaPanico.Escalado => "info",
                            _ => "secondary"
                        };

                        var statusIcon = alerta.Status switch
                        {
                            StatusAlertaPanico.Ativo => "üî¥",
                            StatusAlertaPanico.Atendido => "üü°",
                            StatusAlertaPanico.Resolvido => "‚úÖ",
                            StatusAlertaPanico.Escalado => "üîµ",
                            _ => "‚ö™"
                        };

                        var urgenciaIcon = alerta.NivelUrgencia switch
                        {
                            NivelUrgenciaPanico.Normal => "üü¢",
                            NivelUrgenciaPanico.Moderado => "üü†",
                            NivelUrgenciaPanico.Critico => "üî¥",
                            NivelUrgenciaPanico.Emergencia => "‚ö´",
                            _ => "‚ö™"
                        };

                        <div class="card mb-3 border-@statusClass border-2">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title mb-1">
                                            <span class="badge bg-@statusClass me-2">@statusIcon @alerta.Status</span>
                                            <span class="badge bg-light text-dark">@urgenciaIcon @alerta.NivelUrgencia</span>
                                        </h5>
                                        <small class="text-muted">Alerta #@alerta.Id</small>
                                    </div>
                                    <a href="@Url.Action("Detalhes", "Panico", new { id = alerta.Id })" class="btn btn-sm btn-outline-@statusClass">
                                        Ver Detalhes
                                    </a>
                                </div>

                                <p class="card-text mb-2">@alerta.Descricao</p>

                                <div class="row text-sm">
                                    <div class="col-md-6">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar"></i>
                                            <strong>Criado:</strong> @alerta.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                    <div class="col-md-6">
                                        @if (alerta.DataConfirmacao.HasValue)
                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-check-circle"></i>
                                                <strong>Confirmado:</strong> @alerta.DataConfirmacao.Value.ToString("dd/MM/yyyy HH:mm")
                                            </small>
                                        }
                                    </div>
                                </div>

                                @if (alerta.DataAtendimento.HasValue)
                                {
                                    <div class="mt-2">
                                        <small class="text-muted">
                                            <i class="bi bi-telephone"></i>
                                            <strong>Atendido em:</strong> @alerta.DataAtendimento.Value.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(alerta.NotaAtendimento))
                                {
                                    <div class="alert alert-light mt-3 mb-0">
                                        <strong>üìù Nota do Profissional:</strong>
                                        <p class="mb-0 mt-2">@alerta.NotaAtendimento</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- Informa√ß√µes de Suporte -->
            <div class="alert alert-info mt-5" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-question-circle-fill"></i> D√∫vidas?
                </h5>
                <p class="mb-0">
                    Se voc√™ estiver em situa√ß√£o de crise agora, n√£o espere! 
                    <a href="@Url.Action("Index", "Panico")" class="alert-link">Clique aqui para acionar um novo alerta</a>.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding: 10px 0;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 3px;
        background: linear-gradient(to bottom, #F28B82, #AECBFA);
        display: none;
    }

</style>

<style>
    @@media (max-width: 768px) {
        .timeline::before {
            display: block;
        }
    }
</style>
