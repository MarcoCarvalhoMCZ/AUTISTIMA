@model IEnumerable<AUTistima.Models.School>
@{
    ViewData["Title"] = "Escolas";

    string GetMapsUrl(AUTistima.Models.School s)
    {
        if (s.Latitude.HasValue && s.Longitude.HasValue)
        {
            return $"https://www.google.com/maps/search/?api=1&query={s.Latitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)},{s.Longitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)}";
        }
        var address = $"{s.Nome} {s.Cidade} {s.Estado}";
        return $"https://www.google.com/maps/search/?api=1&query={Uri.EscapeDataString(address)}";
    }
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">
            <i class="bi bi-building text-blue me-2"></i>
            Escolas
        </h1>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-action="Create" class="btn btn-blue">
                <i class="bi bi-plus-lg me-1"></i>
                Cadastrar Escola
            </a>
        }
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Cidade</label>
                    <input type="text" name="cidade" class="form-control" value="@ViewBag.Cidade" placeholder="Filtrar por cidade" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Estado</label>
                    <select name="estado" class="form-select">
                        <option value="">Todos</option>
                        <option value="AC" selected="@(ViewBag.Estado == "AC")">Acre</option>
                        <option value="AL" selected="@(ViewBag.Estado == "AL")">Alagoas</option>
                        <option value="AP" selected="@(ViewBag.Estado == "AP")">Amapá</option>
                        <option value="AM" selected="@(ViewBag.Estado == "AM")">Amazonas</option>
                        <option value="BA" selected="@(ViewBag.Estado == "BA")">Bahia</option>
                        <option value="CE" selected="@(ViewBag.Estado == "CE")">Ceará</option>
                        <option value="DF" selected="@(ViewBag.Estado == "DF")">Distrito Federal</option>
                        <option value="ES" selected="@(ViewBag.Estado == "ES")">Espírito Santo</option>
                        <option value="GO" selected="@(ViewBag.Estado == "GO")">Goiás</option>
                        <option value="MA" selected="@(ViewBag.Estado == "MA")">Maranhão</option>
                        <option value="MT" selected="@(ViewBag.Estado == "MT")">Mato Grosso</option>
                        <option value="MS" selected="@(ViewBag.Estado == "MS")">Mato Grosso do Sul</option>
                        <option value="MG" selected="@(ViewBag.Estado == "MG")">Minas Gerais</option>
                        <option value="PA" selected="@(ViewBag.Estado == "PA")">Pará</option>
                        <option value="PB" selected="@(ViewBag.Estado == "PB")">Paraíba</option>
                        <option value="PR" selected="@(ViewBag.Estado == "PR")">Paraná</option>
                        <option value="PE" selected="@(ViewBag.Estado == "PE")">Pernambuco</option>
                        <option value="PI" selected="@(ViewBag.Estado == "PI")">Piauí</option>
                        <option value="RJ" selected="@(ViewBag.Estado == "RJ")">Rio de Janeiro</option>
                        <option value="RN" selected="@(ViewBag.Estado == "RN")">Rio Grande do Norte</option>
                        <option value="RS" selected="@(ViewBag.Estado == "RS")">Rio Grande do Sul</option>
                        <option value="RO" selected="@(ViewBag.Estado == "RO")">Rondônia</option>
                        <option value="RR" selected="@(ViewBag.Estado == "RR")">Roraima</option>
                        <option value="SC" selected="@(ViewBag.Estado == "SC")">Santa Catarina</option>
                        <option value="SP" selected="@(ViewBag.Estado == "SP")">São Paulo</option>
                        <option value="SE" selected="@(ViewBag.Estado == "SE")">Sergipe</option>
                        <option value="TO" selected="@(ViewBag.Estado == "TO")">Tocantins</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tipo</label>
                    <select name="publica" class="form-select">
                        <option value="">Todas</option>
                        <option value="true" selected="@(ViewBag.Publica == true)">Pública</option>
                        <option value="false" selected="@(ViewBag.Publica == false)">Particular</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-blue w-100">
                        <i class="bi bi-search me-1"></i>
                        Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <i class="bi bi-building display-1 text-muted mb-3"></i>
                <h4 class="text-muted">Nenhuma escola encontrada</h4>
                <p class="text-secondary">Ajuste os filtros ou cadastre uma nova escola.</p>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var escola in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="fw-semibold mb-0">@escola.Nome</h5>
                                @if (escola.EscolaPublica)
                                {
                                    <span class="badge bg-success">Pública</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">Particular</span>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(escola.Cidade))
                            {
                                <p class="text-muted mb-2">
                                    <i class="bi bi-geo-alt me-1"></i>
                                    @escola.Cidade@(string.IsNullOrEmpty(escola.Estado) ? "" : $", {escola.Estado}")
                                    @if (escola.Latitude.HasValue && escola.Longitude.HasValue)
                                    {
                                        <a href="https://www.google.com/maps/search/?api=1&query=@escola.Latitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture),@escola.Longitude.Value.ToString(System.Globalization.CultureInfo.InvariantCulture)" 
                                           target="_blank" class="text-decoration-none ms-2" title="Ver no mapa">
                                            <i class="bi bi-map"></i>
                                        </a>
                                    }
                                </p>
                            }

                            <div class="mb-3">
                                @if (escola.PossuiSalaRecursos)
                                {
                                    <span class="badge bg-primary me-1">
                                        <i class="bi bi-universal-access me-1"></i>
                                        Sala de Recursos
                                    </span>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(escola.Telefone))
                            {
                                <p class="small text-muted mb-1">
                                    <i class="bi bi-telephone me-1"></i>@escola.Telefone
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@escola.Id" class="btn btn-outline-blue btn-sm flex-grow-1">
                                <i class="bi bi-eye me-1"></i>
                                Detalhes
                            </a>
                            <button onclick="shareSchool('@((escola.Nome ?? "").Replace("'", "\\'"))', '@GetMapsUrl(escola)')" 
                                    class="btn btn-outline-secondary btn-sm" title="Compartilhar Localização">
                                <i class="bi bi-share"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function shareSchool(name, url) {
            if (navigator.share) {
                navigator.share({
                    title: name,
                    text: 'Confira esta escola no AUTistima: ' + name,
                    url: url
                })
                .catch((error) => console.log('Error sharing', error));
            } else {
                // Fallback: Open in new tab
                window.open(url, '_blank');
            }
        }
    </script>
}