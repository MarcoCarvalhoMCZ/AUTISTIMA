@model IEnumerable<Opportunity>
@using AUTistima.Extensions
@{
    ViewData["Title"] = "Gerenciar Oportunidades";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-briefcase me-2"></i>
                Oportunidades
            </h1>
        </div>
        <a asp-action="Create" class="btn btn-salmon">
            <i class="bi bi-plus-circle me-2"></i>Nova Oportunidade
        </a>
    </div>

    <!-- Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <select name="tipo" class="form-select">
                        <option value="">Todos os tipos</option>
                        @foreach (TipoOportunidade tipo in Enum.GetValues(typeof(TipoOportunidade)))
                        {
                            <option value="@tipo" selected="@(ViewBag.Tipo == tipo)">@tipo.GetDisplayName()</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary me-2">Filtrar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive-cards">
            <!-- Desktop: Tabela -->
            <div class="desktop-table">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Título</th>
                                <th>Tipo</th>
                                <th>Criador</th>
                                <th>Data</th>
                                <th>Expira</th>
                                <th>Status</th>
                                <th width="150">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var oportunidade in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@oportunidade.Titulo</strong>
                                        @if (oportunidade.PermiteHomeOffice)
                                        {
                                            <span class="badge bg-info ms-1">Home Office</span>
                                        }
                                    </td>
                                    <td><span class="badge bg-secondary">@oportunidade.Tipo.GetDisplayName()</span></td>
                                    <td>@oportunidade.Criador?.NomeCompleto</td>
                                    <td>@oportunidade.DataCriacao.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (oportunidade.DataExpiracao.HasValue)
                                        {
                                            <span class="@(oportunidade.DataExpiracao < DateTime.Now ? "text-danger" : "")">
                                                @oportunidade.DataExpiracao.Value.ToString("dd/MM/yyyy")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (oportunidade.Ativo)
                                        {
                                            <span class="badge bg-success">Ativa</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inativa</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@oportunidade.Id" class="btn btn-outline-secondary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-warning" title="Toggle Status"
                                                    onclick="toggleAtiva(@oportunidade.Id)">
                                                <i class="bi bi-toggle-on"></i>
                                            </button>
                                            <form asp-action="Delete" asp-route-id="@oportunidade.Id" method="post" class="d-inline"
                                                  onsubmit="return confirmarExclusao(this, 'Excluir esta oportunidade?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Excluir">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Mobile: Cards -->
            <div class="mobile-cards p-3">
                @foreach (var oportunidade in Model)
                {
                    <div class="mobile-card">
                        <div class="mobile-card-header">
                            <div>
                                <h6 class="mobile-card-title">@oportunidade.Titulo</h6>
                                <span class="badge bg-secondary">@oportunidade.Tipo.GetDisplayName()</span>
                                @if (oportunidade.PermiteHomeOffice)
                                {
                                    <span class="badge bg-info">Home Office</span>
                                }
                            </div>
                            @if (oportunidade.Ativo)
                            {
                                <span class="badge bg-success">Ativa</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inativa</span>
                            }
                        </div>
                        <div class="mobile-card-body">
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">Criador</span>
                                <span class="mobile-card-value">@(oportunidade.Criador?.NomeCompleto ?? "-")</span>
                            </div>
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">Criada em</span>
                                <span class="mobile-card-value">@oportunidade.DataCriacao.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">Expira em</span>
                                <span class="mobile-card-value">
                                    @if (oportunidade.DataExpiracao.HasValue)
                                    {
                                        <span class="@(oportunidade.DataExpiracao < DateTime.Now ? "text-danger fw-bold" : "")">
                                            @oportunidade.DataExpiracao.Value.ToString("dd/MM/yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem prazo</span>
                                    }
                                </span>
                            </div>
                        </div>
                        <div class="mobile-card-footer">
                            <a asp-action="Edit" asp-route-id="@oportunidade.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="toggleAtiva(@oportunidade.Id)">
                                <i class="bi bi-toggle-on"></i> Status
                            </button>
                            <form asp-action="Delete" asp-route-id="@oportunidade.Id" method="post" class="d-inline"
                                  onsubmit="return confirmarExclusao(this, 'Excluir esta oportunidade?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Excluir
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>

        @if (ViewBag.TotalPaginas > 1)
        {
            <div class="card-footer bg-transparent">
                <nav>
                    <ul class="pagination pagination-sm mb-0 justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                        {
                            <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function toggleAtiva(id) {
            fetch('@Url.Action("ToggleAtiva", "Oportunidades", new { area = "Admin" })/' + id, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) location.reload();
            });
        }
    </script>
    <form>@Html.AntiForgeryToken()</form>
}
