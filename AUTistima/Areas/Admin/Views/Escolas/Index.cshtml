@model IEnumerable<School>
@{
    ViewData["Title"] = "Gerenciar Escolas";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-bank me-2"></i>
                Escolas
            </h1>
        </div>
        <a asp-action="Create" class="btn btn-salmon">
            <i class="bi bi-plus-circle me-2"></i>Nova Escola
        </a>
    </div>

    <!-- Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="busca" value="@ViewBag.Busca" class="form-control" placeholder="Buscar por nome ou cidade...">
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary me-2">Buscar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive-cards">
            <!-- Desktop: Tabela -->
            <div class="desktop-table">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>Tipo</th>
                                <th>Cidade/UF</th>
                                <th>CNPJ</th>
                                <th>Alunos</th>
                                <th width="120">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var escola in Model)
                            {
                                <tr>
                                    <td><strong>@escola.Nome</strong></td>
                                    <td><span class="badge @(escola.EscolaPublica ? "bg-success" : "bg-primary")">@(escola.EscolaPublica ? "Pública" : "Privada")</span></td>
                                    <td>@escola.Cidade / @escola.Estado</td>
                                    <td>@(escola.CNPJ ?? "-")</td>
                                    <td><span class="badge bg-info">-</span></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@escola.Id" class="btn btn-outline-secondary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@escola.Id" method="post" class="d-inline"
                                                  onsubmit="return confirmarExclusao(this, 'Excluir esta escola?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Excluir">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Mobile: Cards -->
            <div class="mobile-cards p-3">
                @foreach (var escola in Model)
                {
                    <div class="mobile-card">
                        <div class="mobile-card-header">
                            <div>
                                <h6 class="mobile-card-title">@escola.Nome</h6>
                            </div>
                            <span class="badge @(escola.EscolaPublica ? "bg-success" : "bg-primary")">@(escola.EscolaPublica ? "Pública" : "Privada")</span>
                        </div>
                        <div class="mobile-card-body">
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">Localização</span>
                                <span class="mobile-card-value">@escola.Cidade / @escola.Estado</span>
                            </div>
                            <div class="mobile-card-row">
                                <span class="mobile-card-label">CNPJ</span>
                                <span class="mobile-card-value">@(escola.CNPJ ?? "-")</span>
                            </div>
                            @if (!string.IsNullOrEmpty(escola.Endereco))
                            {
                                <div class="mobile-card-row">
                                    <span class="mobile-card-label">Endereço</span>
                                    <span class="mobile-card-value small">@escola.Endereco</span>
                                </div>
                            }
                        </div>
                        <div class="mobile-card-footer">
                            <a asp-action="Edit" asp-route-id="@escola.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <form asp-action="Delete" asp-route-id="@escola.Id" method="post" class="d-inline"
                                  onsubmit="return confirmarExclusao(this, 'Excluir esta escola?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Excluir
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>

        @if (ViewBag.TotalPaginas > 1)
        {
            <div class="card-footer bg-transparent">
                <nav>
                    <ul class="pagination pagination-sm mb-0 justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                        {
                            <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pagina="@i" asp-route-busca="@ViewBag.Busca">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
